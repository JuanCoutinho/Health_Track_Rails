<h2 class="text-2xl font-bold mb-5">Telefones de <%= @user.name %></h2>

<%= link_to 'Adicionar Telefone', new_user_phone_path(@user), class: "btn btn-primary mb-4" %>

<table class="table-auto w-full border-collapse border border-gray-200 shadow-lg">
  <thead>
    <tr class="bg-gray-200">
      <th class="px-4 py-2">Número</th>
      <th class="px-4 py-2">Tipo</th>
      <th class="px-4 py-2">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @phones.each do |phone| %>
      <tr>
        <td class="border px-4 py-2"><%= phone.number %></td>
        <td class="border px-4 py-2"><%= phone.type %></td>
        <td class="border px-4 py-2">
          <%= link_to 'Editar', edit_user_phone_path(@user, phone), class: "btn btn-warning" %>
          <%= link_to 'Remover', user_phone_path(@user, phone), method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
