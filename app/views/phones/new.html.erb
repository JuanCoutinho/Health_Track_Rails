<h2 class="text-2xl font-bold mb-5"><%= action_name == 'new' ? 'Adicionar' : 'Editar' %> Telefone</h2>

<%= form_with(model: [@user, @phone], local: true) do |f| %>
  <div class="mb-4">
    <%= f.label :number, 'Número', class: "block text-gray-700 font-medium mb-1" %>
    <%= f.text_field :number, class: "block w-full p-2 border border-gray-300 rounded-lg", placeholder: "Ex: (11) 98765-4321" %>
  </div>

  <div class="mb-4">
    <%= f.label :phone_type, 'Tipo de Telefone', class: "block text-gray-700 font-medium mb-1" %>
    <%= f.select :phone_type, options_for_select(['Celular', 'Residencial', 'Comercial'], @phone.phone_type), {}, class: "block w-full p-2 border border-gray-300 rounded-lg" %>
  </div>

  <div class="flex justify-end">
    <%= f.submit action_name == 'new' ? 'Adicionar Telefone' : 'Salvar Alterações', class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
  </div>
<% end %>

<%= link_to 'Voltar', user_phones_path(@user), class: "mt-4 inline-block text-blue-600 hover:underline" %>
