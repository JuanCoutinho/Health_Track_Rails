<nav class="bg-gradient-to-r from-blue-500 to-blue-600 text-white shadow-lg fixed w-full z-10 top-0">
  <div class="flex items-center justify-between max-w-screen-xl mx-auto px-4 py-3">
    <!-- Logo -->
    <div class="flex items-center">
      <i class="fas fa-heartbeat text-3xl text-white mr-2"></i>
      <span class="text-2xl font-bold whitespace-nowrap tracking-wide">Health Track</span>
    </div>

    <div class="hidden lg:flex lg:items-center space-x-6">
      <%= link_to 'Home', root_path, class: "hover:underline text-white font-medium transition duration-200" %>

      <% if signed_in? %>
        <%= link_to 'Ver Usuário', users_path, class: "hover:underline text-white font-medium transition duration-200" %>
        <%= link_to 'Informações Médicas', info_path, class: "hover:underline text-white font-medium transition duration-200" %>
        <%= link_to "Deslogar", logout_path, method: :delete, data: { turbo_method: :delete }, class: "bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-full font-medium transition duration-200" %>
      <% else %>
        <%= link_to 'Login', signin_path, class: "hover:underline text-white font-medium transition duration-200" %>
        <%= link_to 'Cadastrar', signup_path, class: "hover:underline text-white font-medium transition duration-200" %>
      <% end %>
    </div>

    <button id="mobile-menu-button" class="lg:hidden text-white text-2xl focus:outline-none">
      <i class="fas fa-bars"></i>
    </button>
  </div>

  <div id="mobile-menu" class="hidden flex-col bg-blue-500 text-white lg:hidden">
    <%= link_to 'Home', root_path, class: "px-4 py-2 border-t border-blue-400 hover:bg-blue-600" %>
    <% if signed_in? %>
      <%= link_to 'Ver Usuário', users_path, class: "px-4 py-2 border-t border-blue-400 hover:bg-blue-600" %>
      <%= link_to 'Informações Médicas', info_path, class: "px-4 py-2 border-t border-blue-400 hover:bg-blue-600" %>
      <%= link_to "Deslogar", logout_path, method: :delete, data: { turbo_method: :delete }, class: "px-4 py-2 border-t border-blue-400 bg-red-500 hover:bg-red-600" %>
    <% else %>
      <%= link_to 'Login', signin_path, class: "px-4 py-2 border-t border-blue-400 hover:bg-blue-600" %>
      <%= link_to 'Cadastrar', signup_path, class: "px-4 py-2 border-t border-blue-400 hover:bg-blue-600" %>
    <% end %>
  </div>
</nav>

<script>
  document.getElementById('mobile-menu-button').addEventListener('click', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenu.classList.toggle('hidden');
  });
</script>
